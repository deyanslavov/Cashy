<local:BasePage x:TypeArguments="core:MainPageViewModel" x:Class="Cashy.App.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cashy.App"
      xmlns:core="clr-namespace:Cashy.Core;assembly=Cashy.Core"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="700"
      Title="MainPage">

    <Border BorderBrush="Transparent" 
            BorderThickness="1">
        <Grid Background="AliceBlue">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Left side menu button -->
            <Button x:Name="LeftSideMenuButton"
                    Grid.Column="0"
                    Grid.Row="0"
                    Style="{StaticResource SideMenuButtonsStyle}"
                    Content="NEW"
                    FontSize="{StaticResource FontSizeRegular}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Padding="0 2 0 0" 
                    Margin="10 10 0 0"/>

            <Label x:Name="DateLabel"
                   Grid.Column="1"
                   Grid.Row="0"
                   Content="Hello"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

            <Label 
                   Grid.Column="1"
                   Grid.Row="1"
                   Content="Helloaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Label 
                   Grid.Column="1"
                   Grid.Row="2"
                   Content="Hello"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>


            <!-- Right side menu button -->
            <Button x:Name="RightSideMenuButton"
                    Grid.Column="2"
                    Grid.Row="0"
                    Style="{StaticResource SideMenuButtonsStyle}"
                    Content="{StaticResource RightSideMenuIcon}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 10 10 0"
                    Padding="0 2 0 0"/>


        </Grid>
    </Border>
</local:BasePage>
